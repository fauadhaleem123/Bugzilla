<div class = "container">
    <div class = "jumbotron" style = "margin-top:3%;">
        <p>
            <strong>Title:</strong>
            <%= @bug.title %>
        </p>
        <p>
            <strong>Deadline: </strong>
            <%= @bug.deadline %>
        </p>
        <p>
            <strong>Screenshot: </strong>
            <%= image_tag @bug.image_url(:thumb).to_s %>
        </p>
        <p>
            <strong>Type: </strong>
            <%= @bug.bug_type %>
        </p>
        <p>
            <strong>status: </strong>
            <%= @bug.status %>
        </p>
        <% if current_user.role =="Developer" && @bug.user_id.nil? && @bug.status == 'New'  %>
            <%= link_to "Assign Bug", assign_bug_project_bugs_path(:user_id => current_user.id, :bug_id => @bug.id, :project_id => @project.id) %>
        <% end %>

       

        <%if @bug.user %>
            <p>
                <strong>Assigned To: </strong>
                <%= @bug.user.email %>
            </p>
        <% end %>
        <% if current_user.role =="Developer" && @bug.user_id == current_user.id && @bug.status == 'Started'  %>
            <%= link_to "Mark Resolved/Completed", mark_resolved_project_bugs_path(:bug_id => @bug.id, :project_id => @project.id) %>
        <% end %>
        <%= link_to "Back", project_path(@project), class: "btn btn-light"%>
    </div>
</div>