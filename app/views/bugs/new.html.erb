<div class = "container">
    <div class = "jumbotron" style = "margin-top:3%;">
        <%= link_to projects_path, style: "float: right;" do%>
            <i class = "glyphicon glyphicon-remove"></i>
        <% end %>

        <p class = "h2 mb-4">New Bug for <%= @project.title %></p>

        <%= form_with(model: [ @project, @project.bugs.build ], html: {class: "text-center border border-light p-5", multipart: true}, local: true ) do |f| %>  
            <div class = "form-group">
                <%= f.label :Title, style: "float:left;" %>
                <%= f.text_field :title, class: "form-control mb-4",placeholder: "Add a descriptive title" %>
            </div>
            <div class = "form-group">
                <%= f.label :Deadline, style: "float:left;" %>
                <%= f.date_field :deadline, class: 'form-control rounded-0', 
                placeholder: 'Deadline'%>
            </div>
            <div class = "form-group">
                <%= f.file_field :image %>
            </div>
            <div class = "form-group">
                <%= f.label :Type, style: "float:left; "%><br/>
                <div id = "radio">
                    <div class = "form-check"> 
                        <%= f.radio_button :type, 'Feature', class: "form-check-input", id: "materialChecked2" %>
                        <%= f.label :Feature, class: "form-check-label", for: "materialChecked2" %>
                    </div>
                    <div class = "form-check"> 
                        <%= f.radio_button :type, 'Bug', class: "form-check-input", id: "materialChecked2", style: "float:left;" %>
                        <%= f.label "Bug", class: "form-check-label", for: "materialChecked2", style: "float:left;" %>
                    </div>
                </div>
            </div>
            <% if false %>
                <div class = "form-group">
                    <%= f.select :status, ['New', 'Started', 'Resolved'], {}, class: "form-control" %>
                </div>
            <% end %>
            <%= f.submit class: "btn btn-info btn-block" %>
        <% end %>
    </div>
</div>
